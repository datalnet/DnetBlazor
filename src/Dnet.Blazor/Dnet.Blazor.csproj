<Project Sdk="Microsoft.NET.Sdk.Razor">

	<PropertyGroup>
		<TargetFramework>net10.0</TargetFramework>
		<Nullable>enable</Nullable>
		<ImplicitUsings>enable</ImplicitUsings>
		<Authors>Adrian Mustelier Camino</Authors>
		<Company>Datalnet</Company>
		<Product>Datalnet Blazor Components</Product>
		<Description>Set of Components for Blazor Framework</Description>
		<Copyright>Datalnet</Copyright>
		<PackageTags>Blazor-Components-Datalnet</PackageTags>
		<PackageVersion>4.15.1</PackageVersion>
		<PackageProjectUrl>https://datalnet.com/</PackageProjectUrl>
		<RepositoryUrl>https://github.com/datalnet/DnetBlazor</RepositoryUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageReleaseNotes>
			- Added hide/show tabs programatically.
		</PackageReleaseNotes>
	</PropertyGroup>

	<ItemGroup>
	  <None Include="..\..\README.md">
	    <Pack>True</Pack>
	    <PackagePath>\</PackagePath>
	  </None>
	</ItemGroup>

	<ItemGroup>
		<SupportedPlatform Include="browser" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.AspNetCore.Components" Version="10.0.0" />
		<PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="10.0.0" />
		<PackageReference Include="SixLabors.ImageSharp" Version="3.1.12" />
	</ItemGroup>

	<ItemGroup>
		<Content Update="wwwroot\**">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</Content>
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="Components\Grid\BlgSingleFilter\" />
	</ItemGroup>

</Project>
