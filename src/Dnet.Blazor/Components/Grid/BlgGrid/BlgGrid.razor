                                foreach (var column in pinnedColumnsRight)
                                {
                                    var columnStyle = $"{column.Width}px";

                                    gridTemplateColumnsRight = gridTemplateColumnsRight + " " + columnStyle;
                                }

                                if (GridOptions.UseVirtualization)
                                {
