                                                     HasGrouping="_groupByColumns.Count >= 1"
                                                     OnChangeExpanded="ChangeExpanded"
                                                     OnCellClicked="CellClicked"
                                                     OnRowClicked="RowClicked"
                                                     OnRowDoubleClicked="RowDoubleClicked"
                                                     OnSelectionChanged="SelectionChanged"
